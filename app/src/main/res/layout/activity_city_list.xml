<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <TextView
        android:id="@+id/search_city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_your_city"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="8dp"
        />

    <EditText
        android:id="@+id/search_city_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/search_hint"
        android:ems="10"
        android:background="@drawable/search_input_bg"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_city_txt"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_city_input"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>